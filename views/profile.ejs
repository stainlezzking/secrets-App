<%- include('partials/header') %>
.

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>
    <h3>Welcome <%= user.username %></h3>
     <% user.secrets.forEach(secret=>{ %>
           <p class="secret-text"> <%=secret.secret%>  </p>   
    <% }) %>
    <hr>
    <% if(!hidden){ %>
    <a class="btn btn-light btn-lg" href="/profile" role="button">Profile</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
    <a class="btn btn-success btn-lg" href="/secrets" role="button">secrets</a>
    <% }else{ %>

    <a class="btn btn-primary btn-lg" href="/login" role="button">Login</a>
    <a class="btn btn-dark btn-lg" href="/secrets" role="button">secrets</a>
      <% } %>


  </div>
</div>
<%- include('partials/footer') %>
